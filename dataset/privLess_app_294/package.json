{
  "name": "@orangejellyfish/serverless-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "export NODE_ENV=development && export SLS_STAGE=dev && npm run deploy:env",
    "deploy:env": "sls deploy --stage $SLS_STAGE",
    "deploy:function": "sls deploy function --stage $SLS_STAGE",
    "deploy:production": "export NODE_ENV=production && export SLS_STAGE=prod && npm run deploy:env",
    "remove:env": "sls remove --stage $SLS_STAGE",
    "package": "sls package",
    "lint": "eslint ./src",
    "start": "serverless offline start",
    "test": "jest --watch src",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "engines": {
    "node": "20"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/preset-env": "^7.24.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "serverless": "3.38.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^13.3.3",
    "serverless-plugin-split-stacks": "^1.13.0",
    "serverless-webpack": "^5.13.0",
    "webpack": "^5.91.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint -- --fix"
    ]
  },
  "jest": {
    "collectCoverage": true
  }
}
